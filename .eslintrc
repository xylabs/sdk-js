{
  "root": true,
  "ignorePatterns": ["node_modules/", "build/", "dist/", "bin/"],
  "extends": [
    "@xylabs",
    "plugin:md/recommended"
  ],
  "rules": {
    "import/no-internal-modules": [
      "warn", {
        "allow": [

        ]
      }
    ],
    "md/remark": [
      "error",
      {
        "plugins": ["preset-lint-recommended", "preset-lint-markdown-style-guide", "frontmatter", ["lint-maximum-line-length", false], ["lint-list-item-spacing", false]]
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.md"],
      "parser": "markdown-eslint-parser",
      "rules": {
        "prettier/prettier": [
          "error",
          // Important to force prettier to use "markdown" parser - otherwise it wouldn't be able to parse *.md files.
          // You also can configure other options supported by prettier here - "prose-wrap" is
          // particularly useful for *.md files
          { "parser": "markdown" }
        ]
      }
    }
  ]
}
